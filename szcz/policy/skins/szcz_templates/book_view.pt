<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="szcz.policy">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

        <div class="newsImageContainer"
             tal:condition="context/getImage|nothing">
            <a href="#"
               tal:define="here_url context/@@plone_context_state/object_url;"
               tal:attributes="href string:$here_url/image/image_view_fullscreen"
               id="parent-fieldname-image">
               <img tal:replace="structure python: context.tag(scale='mini', css_class='newsImage')" src="" alt="" />
            </a>
            <p class="discreet" tal:condition="context/imageCaption|nothing">
              <metal:field use-macro="python:context.widget('imageCaption', mode='view')">
              Image Caption
              </metal:field>
            </p>
        </div>
            
            <h4 i18n:translate="label_book_authors"></h4>
              <metal:field use-macro="python: context.widget('authors', 'view')"/>
            <p></p>
            <h4 i18n:translate="label_publisher">Publisher</h4>
            <p>
              <metal:field use-macro="python: context.widget('publisher', 'view')"/>
              <metal:field use-macro="python: context.widget('address', 'view')"/>
            </p>

            <h4 i18n:translate="label_edition"></h4>
            <p>
            <metal:field use-macro="python: context.widget('edition', 'view')"/>
            </p>

            <h4 i18n:translate="label_pages"></h4>
            <p>
            <metal:field use-macro="python: context.widget('pages', 'view')"/>
            </p>

            <h4 i18n:translate="label_isbn"></h4>
            <p>
            <metal:field use-macro="python: context.widget('isbn', 'view')"/>
            </p>

    </metal:block>
</metal:content-core>

</body>
</html>

